{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    // "noImplicitAny": true, 先不开启, 后续打开
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "noErrorTruncation": false,
    "disableReferencedProjectLoad": true,
    "disableSolutionSearching": true,
    "composite": true,
    "types": ["node"],
    "typeRoots": [],
    "lib": [
      "esnext"
    ],
    "paths": {
      "@luckyufei/pm2": ["../ui/src"],
      "@luckyufei/whistle": ["../ui/src/*"],
      "@luckyufei/utils": ["../utils/src"],
      "@luckyufei/utils/*": ["../utils/src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "tests/**/*.ts",
    "node_modules/**/*"
  ],
  "exclude": [
  ]
}
